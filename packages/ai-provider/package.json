{
  "name": "@liqueur/ai-provider",
  "version": "0.1.0",
  "description": "AI provider abstraction for LiquidView schema generation",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "docs": "typedoc src/index.ts --out docs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ablaze/liqueur.git",
    "directory": "packages/ai-provider"
  },
  "bugs": {
    "url": "https://github.com/ablaze/liqueur/issues"
  },
  "homepage": "https://github.com/ablaze/liqueur#readme",
  "keywords": [
    "ai",
    "llm",
    "anthropic",
    "gemini",
    "openai",
    "deepseek",
    "glm",
    "schema-generation"
  ],
  "author": "Project Liquid Contributors",
  "license": "MIT",
  "dependencies": {
    "@liqueur/protocol": "workspace:*"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@google/generative-ai": "^0.21.0",
    "@types/node": "^22.10.5",
    "openai": "^4.77.3",
    "prettier": "^3.1.0"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@google/generative-ai": "^0.21.0",
    "openai": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "@anthropic-ai/sdk": {
      "optional": true
    },
    "@google/generative-ai": {
      "optional": true
    },
    "openai": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=20.0.0"
  }
}
