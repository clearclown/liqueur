{
  "name": "@liqueur/react",
  "version": "0.2.0",
  "description": "Liquid UI - React component library for rendering LiquidView schemas with dashboard management",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run --pool=forks",
    "test:watch": "vitest watch --pool=forks --maxWorkers=1",
    "test:coverage": "vitest run --pool=forks --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "docs": "typedoc src/index.ts --out docs"
  },
  "dependencies": {
    "@liqueur/protocol": "workspace:*",
    "@tanstack/react-table": "^8.21.3",
    "recharts": "^2.15.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ablaze/liqueur.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/ablaze/liqueur/issues"
  },
  "homepage": "https://github.com/ablaze/liqueur#readme",
  "keywords": [
    "liquid",
    "react",
    "ui-components",
    "server-driven-ui",
    "liquidview",
    "chart",
    "table",
    "dashboard",
    "dashboard-management",
    "favorites"
  ],
  "author": "Project Liquid Contributors",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "license": "MIT"
}
