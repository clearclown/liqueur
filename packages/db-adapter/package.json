{
  "name": "@liqueur/db-adapter",
  "version": "0.1.0",
  "description": "Database adapter for executing DataSource queries with Prisma",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
