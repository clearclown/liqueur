  "repository": {
    "type": "git",
    "url": "https://github.com/clearclown/liqueur.git",
    "directory": "packages/db-adapter"
  },
  "bugs": {
    "url": "https://github.com/clearclown/liqueur/issues"
  },
  "homepage": "https://github.com/clearclown/liqueur#readme",
  "keywords": [
    "liqueur",
    "liquid",
    "database",
    "prisma",
    "datasource",
    "executor"
  ],
  "author": "Project Liquid Contributors",
  "license": "MIT",
  "dependencies": {
    "@liqueur/protocol": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "peerDependencies": {
    "@prisma/client": "^5.0.0 || ^6.0.0"
  },
  "peerDependenciesMeta": {
    "@prisma/client": {
      "optional": true
