{
  "name": "liqueur",
  "version": "0.1.0",
  "private": true,
  "description": "AI駆動の動的UI生成を安全に実装するプロトコル・SDKスイート",
  "repository": {
    "type": "git",
    "url": "https://github.com/ablaze/liqueur.git"
  },
  "bugs": {
    "url": "https://github.com/ablaze/liqueur/issues"
  },
  "homepage": "https://github.com/ablaze/liqueur#readme",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "build": "npm run build --workspaces",
    "typecheck": "tsc --build",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,tsx}\" \"packages/*/tests/**/*.{ts,tsx}\"",
    "docs": "npm run docs --workspaces"
  },
  "keywords": [
    "liquid",
    "server-driven-ui",
    "ai",
    "dynamic-ui",
    "protocol",
    "rust",
    "typescript"
  ],
  "author": "Project Liquid Contributors",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^3.0.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT"
}
