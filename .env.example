# =============================================================================
# Project Liquid - Phase 3 Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# SECURITY: Never commit .env file to version control!

# =============================================================================
# AI Provider Configuration
# =============================================================================

# AI Provider Selection
# Options: anthropic | gemini | deepseek | local
AI_PROVIDER=anthropic

# -----------------------------------------------------------------------------
# Anthropic API (Claude Haiku)
# -----------------------------------------------------------------------------
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# -----------------------------------------------------------------------------
# Google Gemini API (Gemini Flash)
# -----------------------------------------------------------------------------
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=AIzaSy-your-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# -----------------------------------------------------------------------------
# DeepSeek AI API
# -----------------------------------------------------------------------------
# Get your API key from: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
DEEPSEEK_MODEL=deepseek-chat

# -----------------------------------------------------------------------------
# Local LLM (LM Studio)
# -----------------------------------------------------------------------------
# LM Studio OpenAI-compatible endpoint
# Default: http://localhost:1234/v1
# Run: lm-studio server start
LOCAL_LLM_BASE_URL=http://localhost:1234/v1
LOCAL_LLM_MODEL=local-model

# =============================================================================
# Database Configuration (reinhardt-web)
# =============================================================================

# PostgreSQL Connection String
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/liqueur

# Artifact Storage Table Name
ARTIFACT_TABLE=artifacts

# =============================================================================
# Security Configuration
# =============================================================================

# JWT Secret for Token Signing
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key-min-32-characters

# Session Secret for Cookie Signing
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-session-secret-key-min-32-characters

# =============================================================================
# Rate Limiting
# =============================================================================

# AI Request Limits per User
AI_REQUEST_LIMIT_PER_MINUTE=10
AI_REQUEST_LIMIT_PER_HOUR=100

# =============================================================================
# Cost Tracking
# =============================================================================

# Enable AI Cost Tracking
ENABLE_COST_TRACKING=true

# Cost Alert Threshold (USD)
# Alert when daily cost exceeds this value
COST_ALERT_THRESHOLD=10.00

# =============================================================================
# Development Configuration
# =============================================================================

# Node Environment
# Options: development | production | test
NODE_ENV=development

# Server Port
PORT=3000

# API Base URL
API_BASE_URL=http://localhost:3000

# Enable Debug Logging
DEBUG=false

# =============================================================================
# Optional: Advanced Configuration
# =============================================================================

# AI Request Timeout (milliseconds)
AI_REQUEST_TIMEOUT=30000

# Database Connection Pool Size
DB_POOL_SIZE=10

# Enable Verbose Logging for AI Responses
VERBOSE_AI_LOGGING=false

# Cache TTL for Database Metadata (seconds)
METADATA_CACHE_TTL=3600

# =============================================================================
# Testing Configuration
# =============================================================================

# Test Database URL (separate from production)
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/liqueur_test

# Mock AI Provider for Tests
USE_MOCK_AI_PROVIDER=true
